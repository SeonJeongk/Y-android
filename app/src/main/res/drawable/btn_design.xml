<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white"/> <!-- 버튼 배경색을 흰색으로 설정 -->
            <corners android:radius="4dp"/> <!-- 버튼 모서리를 둥글게 설정 (원하는대로 변경 가능) -->
            <stroke android:color="#0000FF" android:width="2dp"/> <!-- 테두리 색상을 파란색으로, 굵기를 2dp로 설정 -->
        </shape>
    </item>
</selector>
